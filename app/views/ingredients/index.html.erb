<div class="row">
  <div class="col-xs-8">

<p id="notice"><%= notice %></p>

<h1>Ingredientes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to ingredient.name, ingredient %></td>

        <td><%= link_to 'Alterar', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Remover', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo ingrediente', new_ingredient_path %>

  </div>
</div>

