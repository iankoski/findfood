

<div class="row">
  <div class="col-xs-8">

  <table class="table">
    <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Ações</th>


    </tr>
    </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
     <tr>
       <td><%= link_to restaurant.name, restaurant %></td>


        <td><%= link_to 'Editar', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Remover', restaurant, method: :delete, data: {confirm: 'Esta certo disso?'} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>

  <div class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Categorias</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @categories.each do |category| %>
            <li>
              <%= link_to category.name, homepage_restaurants_path(category_id: category.id) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Localizar</h3>
      </div>
      <div class="panel-body">
        <%= form_tag("/restaurants/homepage", method: "post") do %>
          <%= text_field_tag(:search_term) %>
          <%= submit_tag("Buscar") %>
        <% end %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Cadastrar Restaurante</h3>
      </div>
      <div class="panel-body">
        <%= link_to 'Novo restaurante', new_restaurant_path %>
      </div>
    </div>

  </div>
  </div>

</div>
